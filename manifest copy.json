{
    "manifest_version": 3,
    "name": "jira-helper",
    "version": "1.0",
    "description":"This is a jira helper",
    "icons": {
        "16": "images/icon-16.png",
        "32": "images/icon-32.png",
        "48": "images/icon-48.png",
        "128": "images/icon-128.png"
      },
      "action": {
        "default_icon": {              
          "16": "images/icon-16.png",   
          "32": "images/icon-32.png"    
        },
        "default_title": "Click Me",   
        "default_popup": "popup.html"  
      },
      "content_scripts":{
        "js":"scripts/content.js",
        "matches":[
          "*"
        ]
      }
}